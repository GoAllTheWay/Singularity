#slave-usage-page
	margin-left : 25px

// SlaveAggregates
.avg-cpu
	width : 150px

.avg-memory
	width : 150px

.total-slaves #value, .total-tasks #value
	font-size : 70px
	text-align : center

.total-slaves #label, .total-tasks #label
	font-size : 20px
	text-align : center

// SlaveHealth
.single-slave-btn
	padding : 15px 15px
	border-radius : 0px
	display : inline-block

.ok-slave
	background-color : $color-oz
	border-color : $color-oz-dark

.warning-slave
	background-color : $color-marigold
	border-color : $color-marigold-dark

.critical-slave
	background-color : $color-norman
	border-color : $color-norman-dark

// SlaveHealthMenuItems
.dropdown-menu
	border-radius : 0px

.stat-item-detail
	white-space : nowrap
	padding-left : 20px
	padding-right : 5px
	width : 300px

#stat-name
	display : inline
	text-align : right

#stat-value
	display : inline

#stat-percentage
	display : inline

.warning-stat
	color : $color-marigold

.critical-stat
	color : $color-norman
